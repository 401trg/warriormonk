{

  "manifest_version": 2,
  "name": "__MSG_extensionName__",
  "description": "__MSG_extensionDescription__",
  "version": "1.3",
  "default_locale": "en",
  "applications": {
    "gecko": {
      "strict_min_version": "56.0a1"
    }
  },

  "background": {
    "scripts": ["background.js"]
  },

  "permissions": [
    "menus",
    "activeTab",
    "tabs",
    "notifications"
  ],

  "icons": {
    "280": "icons/monk.png"
  },

  "sidebar_action": {
    "default_icon": "icons/monk.png",
    "default_title" : "WarriorMonk Quick Notes",
    "default_panel": "sidebar/sidebar.html"
  }
}
